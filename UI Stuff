// Basic UI Example: My Amazing UI

global string $happyCube[]; // declare global variable

// Delete any existing window with this name
if (`window -exists myAmazingUI`) {
    deleteUI -window myAmazingUI;
}

// Define a procedure for "createCube"
global proc createCube() {
    // createCube
    global string $happyCube[]; // Access the global variable
    $happyCube = `polyCube -name "happyLittleCube"`;
}

// Define a procedure for "moveCubes"
global proc moveCubes() {
    global string $happyCube[]; // Access the global variable
    // move Cubes
    string $sel[] = `ls -sl`;

    for ($each in $sel){
        if ($each == $happyCube[0]) {
            move -r 0 2 0 $each;
        }
        else {
            move -r 0 -2 0 $each;
        }
    }
}

// Build the window
window -title "My Amazing UI" -widthHeight 200 100 myAmazingUI;
columnLayout -adjustableColumn true -rowSpacing 10;
    button -label "Create Happy Cube" -command "createCube()";
    button -label "Move Cubes" -command "moveCubes()";
setParent ..;

// Show the window
showWindow myAmazingUI;
