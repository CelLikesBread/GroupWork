// Basic UI Example: My Amazing UI

// OPTIONAL: Delete any existing window with this name
if (`window -exists myAmazingUI`) {
    deleteUI -window myAmazingUI;
}

// Define a procedure for "Do a thing"
global proc myDoAThing() {
    // add your code here
    print("Pete is by far my favourite lecturer.\n");
}

// Build the window
window -title "My Amazing UI" -widthHeight 300 100 myAmazingUI;
columnLayout -adjustableColumn true -rowSpacing 10;
    button -label "Do a thing" -command "myDoAThing()";
    button -label "Do another thing" -command "print(\erergf"Doing another thing!\\n\")";
setParent ..;

// Show the window
showWindow myAmazingUI;


